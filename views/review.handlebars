<div class="container">
  <div class="row card">
    <h2 class="titles pinkTxt">{{ name }}</h2>
    <div id="rater" data-rating="{{ rating }}"></div>
    <p class="text-dark">{{ description }}</p>
    <h6 class="pt-2 text-right titles">
      Posted by {{ user.name }} on {{format_date date_created}}
    </h6>
  </div>

  <br />

  <div class="row card">
    <div class="col-md-8 titles">
      <p>COMMENTS:</p>
      {{> comments comments}}
    </div>
  </div>

  <br />

  {{#if logged_in}}
  <form class="row comment-form">
    <div class="form-group p-2 col-md-8">
      <textarea
        rows="3"
        cols="50"
        class="form-input"
        id="comment-text"
        name="comment-text"
      ></textarea>
      <br />
      <button type="submit" class="btn btn-salmon">Add Comment</button>
    </div>
  </form>
  {{/if}}
</div>

<script src="/js/comment.js"></script>

<script src="/js/bundleReview.js"></script>
